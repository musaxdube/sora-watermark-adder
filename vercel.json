{
  "version": 2,
  "builds": [
    { 
      "src": "backend/package.json", 
      "use": "@vercel/node",
      "config": { "includeFiles": ["backend/dist/**", "backend/sorawatermark.mp4"] }
    },
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/static-build", 
      "config": { "distDir": "dist" } 
    }
  ],
  "routes": [
    { "src": "/upload", "dest": "/backend/dist/index.js" },
    { "src": "/progress/(.*)", "dest": "/backend/dist/index.js" },
    { "src": "/download/(.*)", "dest": "/backend/dist/index.js" },
    { "src": "/(.*)", "dest": "/frontend/dist/$1" }
  ]
}
